{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "ES2022",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": false,
    "sourceMap": true,
    "target": "ES2022"
  },
  "exclude": [
    "node_modules",
    "**/*.d.ts",
    "**/*.d.ts.map",
    "**/*.js",
    "**/*.js.map"
  ],
  "extends": ["./base.json"]
}
